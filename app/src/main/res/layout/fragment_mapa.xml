<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvExplorarEdificaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explorar Edificaciones"
            android:textColor="#006666"
            android:textSize="28sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Círculo con borde -->

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgMapaCircularr"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/mapaimagen"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roudedImageViewRounded"
            app:strokeColor="#006666"
            app:strokeWidth="6dp"
            android:padding="4dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:id="@+id/labelEdificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccione una Edificación"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Buscar"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@android:color/black"
        app:boxStrokeWidth="2dp"
        app:boxStrokeWidthFocused="3dp">

        <!-- AutoCompleteTextView con lista desplegable y texto centrado -->
        <AutoCompleteTextView
            android:id="@+id/auto_complete_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textColorHint="#000000" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
            android:id="@+id/btnMostrarEnElMapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar en el mapa"
            android:backgroundTint="#006666"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:paddingHorizontal="24dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
        />
    </LinearLayout>
</FrameLayout>



