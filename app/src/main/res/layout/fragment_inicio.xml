<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.InicioFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:background="#F5F5F5">

        <!-- Contenedor del mensaje de bienvenida -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="32dp"
            android:background="#00695C"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvBienvenido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-medium"
                android:text="Bienvenido"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </RelativeLayout>

        <!-- Icono de usuario -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_perfil"
            android:padding="16dp"
            android:tint="#000000" />

        <!-- Texto de saludo personalizado -->
        <TextView
            android:id="@+id/tvSaludo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Hola Gabriel!"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="24dp" />

        <!-- Botón de explorar edificaciones -->
        <Button
            android:id="@+id/btnExplorarEdificaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explorar edificaciones"
            android:backgroundTint="#00695C"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:paddingHorizontal="24dp"
            android:fontFamily="sans-serif-medium"/>

        <!-- Botón de ir al mapa -->
        <Button
            android:id="@+id/btnIrAlMapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ir al mapa"
            android:backgroundTint="#BDBDBD"
            android:textColor="#000000"
            android:paddingHorizontal="24dp"
            android:fontFamily="sans-serif-medium"/>

    </LinearLayout>

</FrameLayout>